<% #TODO make a _task.html.erb partial to make this DRYer %>

<div class="span-3">
    <h3>Monday</h3>
    <% @incomplete.thisweek.monday.roots.each do |task| %>
      <p>
        <%= task.name %> >> <br/>
        <%= link_to "complete!", complete_task_path(task.id) %>
        <small>| <%= link_to "delete", task, :method => :delete %> |</small>
        <small>| <%= link_to "subtask", new_task_path(task.id) %> |</small>
      </p>
      <p>
        <% task.children.incomplete.each do |subtask| %>
          -- <%= subtask.name %>
          <%= link_to "complete!", complete_task_path(subtask.id) %>
        <% end %>
      </p>
      <hr/>
    <% end %>
</div>
